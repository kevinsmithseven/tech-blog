<div class="row mt-4">
  <div class="col-md-6">
    <h3>Update Blogpost:</h3>
    {{log this}}
    <form data-id="{{id}}" class="form update-blogpost-form">
      <div class="form-group">
        <label for="blogpost-title">Title:</label>
        <input value="{{title}}" class="form-input" type="text" id="blogpost-title" name="title" />
      </div>
      <div class="form-group">
        <label for="blogpost-content">Content:</label>
        <textarea placeholder="{{content}}" class="form-input" id="blogpost-content" name="content"></textarea>
      </div>
      <div class="form-group">
        <button class="btn btn-info btn-sm" >Update Post</button>
      </div>
    </form>
  </div>

  <script src="/js/editpost.js"></script>