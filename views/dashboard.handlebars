{{log this}}
<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Blogpost:</h3>

    <form class="form new-blogpost-form">
      <div class="form-group">
        <label for="blogpost-title">Title:</label>
        <input class="form-input" type="text" id="blogpost-title" name="title" />
      </div>
      <div class="form-group">
        <label for="blogpost-content">Content:</label>
        <textarea class="form-input" id="blogpost-content" name="content"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>


{{#each userPosts as |post|}}
<div class="card">
    <div class="card-body">
        <div class="card-header flex-row justify-space-between">
            <h2>{{title}}</h2>
            <div>
                Posted by {{user.user_name}} on {{format_date created_at}}
            </div>
        </div>
        <p class="card-text">{{content}}</p>
    </div>
    </div>
{{/each}}

<script src="/js/dashboard.js"></script>